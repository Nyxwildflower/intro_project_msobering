<div class="row my-4">
  <h1 class="text-center">Unit</h1>
</div>

<div class="row border border-2 rounded-4 border-danger-subtle mb-5 p-4">
  <div class="col">
    <div class="card">
      <div class="card-body">
        <h2 class="card-title h5 text-center">Code:</h2>
        <p class="text-center"><%= @unit.code %></p>
      </div>
    </div>
  </div>
  <div class="col">
    <div class="card">
      <div class="card-body">
        <h2 class="card-title h5 text-center">Description:</h2>
        <p class="text-center"><%= @unit.name %></p>
      </div>
    </div>
  </div>
</div>

<%= render partial: "calls/call", locals: {calls: @unit.calls} %>